{
  "name": "Permalinker",
  "version": "0.0.2",
  "manifest_version": 2,
  "description": "Right click → Save to cloud → Permalink on your clipboard.",
  "homepage_url": "http://alp.im",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "page": "src/bg/background.html",
    "persistent": true
  },
  "options_page": "src/options_custom/index.html",
  "permissions": [
    "contextMenus"
  ]
}